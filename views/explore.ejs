<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Explore | Ehsaas</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .glass-card { background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.05); transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1); }
        .vibe-tag { background: linear-gradient(90deg, #f43f5e, #8b5cf6); }
    </style>
</head>
<body class="bg-[#050505] text-white min-h-screen">

    <nav class="sticky top-0 z-50 bg-black/80 backdrop-blur-md border-b border-white/5 px-4 py-3">
        <div class="max-w-6xl mx-auto flex justify-between items-center">
            <div class="flex items-center gap-2">
                <div class="w-8 h-8 bg-rose-600 rounded flex items-center justify-center font-black">E</div>
                <span class="font-black tracking-tighter text-lg">EHSAAS</span>
            </div>
            <div class="flex gap-6 items-center">
                <a href="/profile" class="text-gray-400 hover:text-white transition text-xs font-bold uppercase tracking-widest">My Profile</a>
                <a href="/logout" class="text-rose-500 text-xs font-black uppercase tracking-widest">Logout</a>
            </div>
        </div>
    </nav>

    <main class="max-w-6xl mx-auto px-4 py-10">
        <div class="mb-10 flex justify-between items-end">
            <div>
                <h1 class="text-3xl font-black tracking-tight mb-2">Discover Vibes</h1>
                <p class="text-gray-500 text-sm">Find your mutual frequency.</p>
            </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8" id="explore-grid">
            <% if (matches.length > 0) { %>
                <% matches.forEach(match => { %>
                    <div id="card-<%= match._id %>" class="glass-card rounded-[3rem] overflow-hidden p-5 relative flex flex-col h-full">
                        
                        <a href="/user/<%= match._id %>" class="group block mb-6">
                            <div class="relative aspect-square rounded-[2.5rem] overflow-hidden">
                                <img src="<%= match.profilePic || 'https://via.placeholder.com/400?text=No+Vibe' %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700">
                                <div class="absolute top-4 right-4 vibe-tag px-4 py-1.5 rounded-full text-[10px] font-black uppercase shadow-xl"><%= match.percent %>%</div>
                            </div>
                            <h3 class="text-xl font-bold mt-6 text-center"><%= match.name %></h3>
                        </a>

                        <div class="flex justify-center gap-8 mt-auto pb-4">
                            <button onclick="handleAction('<%= match._id %>', 'cross')" class="w-16 h-16 rounded-full border-2 border-rose-500/20 flex items-center justify-center text-rose-500 hover:bg-rose-500 hover:text-white transition-all shadow-lg hover:scale-110">
                                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                            </button>

                            <button onclick="handleAction('<%= match._id %>', 'tick')" class="w-16 h-16 rounded-full border-2 border-emerald-500/20 flex items-center justify-center text-emerald-500 hover:bg-emerald-500 hover:text-white transition-all shadow-lg hover:scale-110">
                                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><polyline points="20 6 9 17 4 12"></polyline></svg>
                            </button>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-span-full py-20 text-center glass-card rounded-[2.5rem]">
                    <h2 class="text-lg font-bold">End of the vibe...</h2>
                    <p class="text-gray-500 text-sm mt-2">Come back later for new matches!</p>
                </div>
            <% } %>
        </div>
    </main>

    <script>
        async function handleAction(userId, action) {
            const res = await fetch('/api/vibe-action', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ toUserId: userId, action })
            });
            const data = await res.json();
            
            const card = document.getElementById(`card-${userId}`);
            card.style.transform = action === 'tick' ? 'translateX(300px) rotate(20deg)' : 'translateX(-300px) rotate(-20deg)';
            card.style.opacity = '0';
            
            setTimeout(() => {
                card.remove();
                if (data.match) alert(data.message);
                else if (action === 'tick') alert(data.message);
            }, 500);
        }
    </script>
</body>
</html>