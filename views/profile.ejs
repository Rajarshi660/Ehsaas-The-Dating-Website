<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= user.name %> | Ehsaas</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
    <style>
        .insta-gradient { background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888); }
        .no-scrollbar::-webkit-scrollbar { display: none; }
        #crop-preview-container img { max-width: 100%; display: block; }
    </style>
</head>
<body class="bg-black text-white antialiased">

    <nav class="sticky top-0 z-50 bg-black/90 backdrop-blur-md border-b border-white/10 px-4 py-3">
        <div class="max-w-4xl mx-auto flex justify-between items-center">
            <a href="/explore" class="flex items-center gap-2 group">
                <div class="w-8 h-8 bg-gradient-to-tr from-rose-500 to-purple-600 rounded flex items-center justify-center font-bold italic group-hover:scale-110 transition">E</div>
                <span class="font-bold tracking-tighter text-lg">EHSAAS</span>
            </a>
            <div class="flex gap-6 items-center">
                <button onclick="toggleModal('uploadModal')" class="text-2xl hover:text-rose-500 transition">+</button>
                <a href="/logout" class="text-rose-500 text-sm font-bold flex items-center gap-1">Logout</a>
            </div>
        </div>
    </nav>

    <main class="max-w-4xl mx-auto pt-10 px-4 pb-20">
        <header class="flex flex-col md:flex-row items-center gap-10 md:gap-16 mb-12">
            <div class="insta-gradient p-1 rounded-full">
                <div class="w-32 h-32 md:w-36 md:h-36 rounded-full bg-black border-4 border-black overflow-hidden flex items-center justify-center">
                    <% if (user.profilePic) { %>
                        <img src="<%= user.profilePic %>" class="w-full h-full object-cover">
                    <% } else { %>
                        <span class="text-5xl font-black"><%= user.name.charAt(0) %></span>
                    <% } %>
                </div>
            </div>
            <div class="flex-1 text-center md:text-left">
                <div class="flex flex-wrap items-center gap-4 mb-4 justify-center md:justify-start">
                    <h2 class="text-2xl font-light"><%= user.name.toLowerCase().replace(/\s/g, '_') %></h2>
                    <button onclick="toggleModal('editModal')" class="bg-[#363636] px-4 py-1.5 rounded-lg text-sm font-bold">Edit Profile</button>
                </div>
                <div class="flex gap-8 mb-4 justify-center md:justify-start text-sm">
                    <span><strong><%= posts.length %></strong> posts</span>
                    <span><strong><%= user.genres.length %></strong> vibes</span>
                </div>
                <p class="font-bold text-sm"><%= user.name %></p>
                <p class="text-gray-400 text-sm whitespace-pre-wrap"><%= user.bio %></p>
            </div>
        </header>

        <div class="grid grid-cols-3 gap-1 md:gap-4 border-t border-white/10 pt-8">
            <% posts.forEach(post => { %>
                <div class="aspect-square bg-[#121212] overflow-hidden group relative">
                    <img src="<%= post.imageUrl %>" class="w-full h-full object-cover">
                </div>
            <% }) %>
        </div>
    </main>

    <div id="editModal" class="fixed inset-0 bg-black/80 z-[100] hidden items-center justify-center p-4">
        <div class="bg-[#262626] w-full max-w-sm rounded-2xl p-8">
            <h3 class="font-bold mb-6">Profile Settings</h3>
            <form action="/profile/edit" method="POST" enctype="multipart/form-data" class="space-y-4">
                <div class="space-y-1">
                    <label class="text-[10px] text-gray-500 uppercase font-bold">Change Photo</label>
                    <input type="file" name="profilePic" class="text-xs text-gray-400">
                </div>
                <input type="text" name="name" value="<%= user.name %>" class="w-full bg-black p-3 rounded-xl border border-white/5 outline-none">
                <textarea name="bio" class="w-full bg-black p-3 rounded-xl h-24 border border-white/5 outline-none"><%= user.bio %></textarea>
                <input type="text" name="genres" value="<%= user.genres.join(', ') %>" class="w-full bg-black p-3 rounded-xl border border-white/5 outline-none">
                <button type="submit" class="w-full bg-rose-600 py-3 rounded-xl font-bold">Update Profile</button>
                <button type="button" onclick="toggleModal('editModal')" class="w-full text-xs text-gray-500 mt-2">Cancel</button>
            </form>
        </div>
    </div>

    <div id="uploadModal" class="fixed inset-0 bg-black/95 z-[100] hidden items-center justify-center p-4">
        <div class="bg-[#1a1a1a] w-full max-w-lg rounded-2xl p-6 border border-white/10">
            <h3 class="text-center font-bold mb-4">Preview & Crop</h3>
            <div id="crop-preview-container" class="w-full aspect-square bg-black rounded-xl overflow-hidden mb-6 flex items-center justify-center border border-white/5">
                <img id="crop-preview" src="">
            </div>
            <div class="space-y-4">
                <input type="file" id="post-file-input" accept="image/*" class="text-xs text-gray-500">
                <textarea id="post-caption" placeholder="Caption..." class="w-full bg-black border border-white/10 p-3 rounded-xl h-20 text-sm outline-none focus:border-rose-500"></textarea>
                <div class="flex gap-2">
                    <button type="button" id="crop-and-post" class="flex-1 bg-white text-black py-3 rounded-xl font-bold text-xs uppercase tracking-widest">Share Post</button>
                    <button type="button" onclick="toggleModal('uploadModal')" class="flex-1 bg-white/5 py-3 rounded-xl font-bold text-xs uppercase">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let cropper;
        function toggleModal(id) {
            const m = document.getElementById(id);
            m.classList.toggle('hidden'); m.classList.toggle('flex');
            if (m.classList.contains('hidden') && cropper) {
                cropper.destroy();
                document.getElementById('crop-preview').src = "";
            }
        }

        // Handle Preview Logic
        document.getElementById('post-file-input').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    const img = document.getElementById('crop-preview');
                    img.src = event.target.result;
                    if (cropper) cropper.destroy();
                    cropper = new Cropper(img, { aspectRatio: 1, viewMode: 1 });
                };
                reader.readAsDataURL(file);
            }
        });

        // Handle Cropped Upload
        document.getElementById('crop-and-post').addEventListener('click', function() {
            if (!cropper) return alert("Select an image first!");
            cropper.getCroppedCanvas({ width: 1080, height: 1080 }).toBlob((blob) => {
                const fd = new FormData();
                fd.append('postImage', blob, 'post.jpg');
                fd.append('caption', document.getElementById('post-caption').value);
                fetch('/upload', { method: 'POST', body: fd })
                .then(res => res.json())
                .then(data => { if(data.success) window.location.reload(); });
            }, 'image/jpeg');
        });
    </script>
</body>
</html>